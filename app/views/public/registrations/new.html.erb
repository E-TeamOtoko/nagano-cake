<div class='container mb-5 text-center'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h5>新規会員登録</h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %>
          <%= f.label :"(姓)" %>
          <%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "last_name" %>
        </div>

        <div class="field">
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, placeholder: "道子", class: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, placeholder: "レイワ", class: "last_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, placeholder: "sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "address" %>
        </div>

        <div class="field">
          <%= f.label :"電話番号(ハイフンなし)" %>
          <%= f.text_field :phone_number, placeholder: "0000000000", class: "phone_number" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規会員登録", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
