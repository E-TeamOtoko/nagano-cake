<div class="genre-new">
  <h5>ジャンル一覧・追加</h5>
  <%= form_with model: [:admin, @genre] do |f| %>
    <div class="form-group">
      <b><%= f.label :ジャンル名 %></b>
    </div>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control genre_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<table class="table">
  <tbody>
    <div class="genre-index">
      <tr>ジャンル</tr>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>