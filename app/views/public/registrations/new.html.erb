<div class="public-registrations">
  <div class="public-registrations-title">
    <h5>新規会員登録</h5>
  </div>

  <div class="public-registrations-table">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table>
        <tr class="public-registrations-field">
          <td><%= f.label :名前 %></td>
          <td class="not_css"><%= f.label :"(姓)" %></td>
          <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, size: 25, class: "textlines-radius" %></td>
          <td class="not_css"><%= f.label :"(名)" %></td>
          <td><%= f.text_field :first_name, placeholder: "道子", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :フリガナ %></td>
          <td class="not_css"><%= f.label :"(セイ)" %></td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ", size: 25, class: "textlines-radius" %></td>
          <td class="not_css"><%= f.label :"(メイ)" %></td>
          <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, placeholder: "sample@example.com", size: 25, autocomplete: "email", class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :postal_code, placeholder: "0000000", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :住所 %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 68, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :"電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :phone_number, placeholder: "0000000000", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td>
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
            <% end %>
          </td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-field">
          <td><%= f.label :"パスワード(確認用)" %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
        </tr>

        <tr class="public-registrations-actions">
          <td></td>
          <td></td>
          <td colspan="3"><%= f.submit "新規会員登録", class: "btn btn-success col-4" %></td>
        </tr>
      </table>

    <% end %>
  </div>

  <%= render "public/shared/links" %>

</div>