<div class="container my-5">
  <div class="row">
    <div class="offset-1 text-center">
      <h4 class="table-active text-center px-3">
        マイページ
      </h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mr-auto">
      <div class="container mb-5">
        <div class="row">
          <div class="form-inline col-3">
            <h3>
              <strong>登録情報</strong>
            </h3>
          </div>
          <div class="form-inline col-4">
            <a class="btn btn-success" data-method="get" href="<%= edit_customer_path(@customer) %>">編集する</a>
          </div>
        </div>
      </div>

      <%= form_with model: @customer, url: customer_path(@customer), method: :GET do |f| %>
        <table border="1" style="border-collapse: collapse" class="table-sm" width="600">
          <tr>
              <th class="table-active">氏名</th>
              <th><%= @customer.last_name %><%= @customer.first_name %></th>
          </tr>
          <tr>
              <th class="table-active">カナ</th>
              <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          </tr>
          <tr>
              <th class="table-active">郵便番号</th>
              <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
              <th class="table-active">住所</th>
              <th><%= @customer.address %></th>
          </tr>
          <tr>
              <th class="table-active">電話番号</th>
              <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
              <th class="table-active">メールアドレス</th>
              <th><%= @customer.email %></th>
          </tr>
        </table>
      <% end %>
      
      <div class="container mt-5">
        <div class="row">
          <div class="form-inline col-3">
            <h3>
              <strong>配送先</strong>
            </h3>
          </div>
          <div class="form-inline col-3">
            <a class="btn btn-primary" data-method="get" href="<%= addresses_path(@customer) %>">一覧をみる</a>
          </div>
        </div>
      </div>
      <div class="container mb-5">
        <div class="row">
          <div class="form-inline col-3">
            <h3>
              <strong>注文履歴</strong>
            </h3>
          </div>
          <div class="form-inline col-3">
            <a class="btn btn-primary" data-method="get" href="<%= orders_path(@customer) %>">一覧をみる</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>