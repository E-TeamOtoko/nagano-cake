<div class="container my-5">
  <div class="row">
    <div class="mt-2 offset-3 title-text text">
      <h4 class="table-active text-center px-3">
        注文情報入力
      </h4>
    </div>
  </div>

    <div class="row">
      <div class="mt-5 col-md-6 mx-auto">
        <%= form_with model: @order, url: confirm_orders_path, local: :true do |f| %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>

            <h4 class="text">
              支払い方法
            </h4>
              <div class="light-text">
                <%= f.radio_button :payment, 0 %>
                <%= f.label :payment, "クレジットカード" %>
                <%= f.radio_button :payment, 1 %>
                <%= f.label :payment, "銀行振込" %>
              </div>

              <h4 class="text">
                お届け先
              </h4>
                <div class="form-check">
                  <input class="form_check_input" type="radio" name="order_address" id="customer_address" value="option1" checked>
                    <label class="form_check_label text" for="customer_address">
                      ご自身の住所
                    </label></br>
                  <div class="light-text">
                    〒<%= current_customer.postal_code %>　<%= current_customer.address %></br>
                      <%= current_customer.last_name %><%= current_customer.first_name %>
                  </div>
                </div>

                <div class="form-check">
                <input class="form_check_input" type="radio" name="order_address" id="customer_address" value="option2" checked>
                    <label class="form_check_label text" for="customer_address">
                      登録済住所から選択
                    </label></br>
                  <div class="light-text">
                    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address, :postal_code) %>
                  </div>
                </div>

                <div class="form-check">
                  <input class="form_check_input" type="radio" name="order_address" id="new_address" value="option3" >
                    <label class="form_check_label text" for="new_address">
                      新しいお届け先
                    </label></br>
                  <div class="text">
                    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
                    <%= f.text_field :postal_code, placeholder: "0000000" %></br>
                    <%= f.label :address, "住所　　　　　　　　　　" %>
                    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></br>
                    <%= f.label :name, "宛名　　　　　　　　　　" %>
                    <%= f.text_field :name, placeholder: "令和道子" %></br>
                  </div>
                </div>

                  <div class="mt-3 text">
                <%= f.submit "確認画面へ進む", class: "btn btn-primary", method: :POST %>
                  </div>
                <% end %>
    </div>
  </div>
</div>