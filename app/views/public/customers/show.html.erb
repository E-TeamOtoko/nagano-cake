<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mx-auto">
      
      <%= form_with model: @customer, url: customer_path(@customer), method: :GET do |f| %>
      
      <h1>マイページ</h1>
      
        <table class='table'>
          <tr>
            <th>
              <strong>登録情報</strong>
            </th>
            <th>
              <a class="btn btn-sm btn-success" data-method="get" href="<%= edit_customer_path(@customer) %>">編集する</a>
            </th>
          </tr>
          <tr>
              <th>氏名</th>
              <th><%= @customer.last_name %><%= @customer.first_name %></th>
          </tr>
          <tr>
              <th>カナ</th>
              <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          </tr>
          <tr>
              <th>郵便番号</th>
              <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
              <th>住所</th>
              <th><%= @customer.address %></th>
          </tr>
          <tr>
              <th>電話番号</th>
              <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
              <th>メールアドレス</th>
              <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>
              <strong>配送先</strong>
            </th>
            <th>
              <a class="btn btn-sm btn-primary" data-method="get" href="<%= addresses_path(@customer) %>">一覧をみる</a>
            </th>
          </tr>
          <tr>
            <th>
              <strong>注文履歴</strong>
            </th>
            <th>
              <a class="btn btn-sm btn-primary" data-method="get" href="<%= orders_path(@customer) %>">一覧をみる</a>
            </th>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>