<h1>マイページ</h1>
<h2><strong>登録情報</strong></h2>

<a class="btn btn-sm btn-success" data-method="get" href="<%= edit_public_customer_path(@customer) %>">編集する</a>

<table class='table'>
  <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %><%= @customer.first_name %></th>
  </tr>
  <tr>
      <th>カナ</th>
      <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
  </tr>
  <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
  </tr>
  <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
  </tr>
  <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
  </tr>
</table>

<h2><strong>配送先</strong></h2>

<a class="btn btn-sm btn-success" data-method="get" href="<%= public_addresses_path(@customer) %>">一覧をみる</a>

