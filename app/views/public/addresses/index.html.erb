<div class="container my-5">
  <div class="row">
    <div class="text-center">
      <h3 class="title">
        配送先登録/一覧
      </h3>
    </div>
  </div>
      
  <div class="row mt-5">
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mr-auto">
      <%= form_with model: @address, url: addresses_path(@address), method: :POST do |f| %>
        <table class='table table-borderless'>
          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <th class="form-group">
              <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control address_postal_code" %>
            </th>
          </tr>
          <tr>
            <th>住所</th>
            <th class="form-group">
              <%= f.text_field :address, placeholder: "住所", class: "form-control address_address" %>
            </th>
          </tr>
          <tr>
            <th>宛名</th>
            <th class="form-group">
              <%= f.text_field :name, placeholder: "宛名", class: "form-control address_name" %>
            </th>
          </tr>
          <tr>
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </tr>
        </table>
      <% end %>
          
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <% if address.customer == current_customer %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td class="text-center">
                  <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                  <%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

