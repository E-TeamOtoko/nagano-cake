<div class="container mt-5">
  <div class="row">
    <div class="col-lg-2 col-md-3 bg-light text-center">
     <h5>商品一覧</h5>
    </div>
  </div>
  <div class="row">
    <table class="mx-auto">
      <thead>
        <tr>
          <th class="col-2">商品ID</th>
          <th class="col-4">商品名</th>
          <th class="col-2">税抜価格</th>
          <th class="col-2">ジャンル</th>
          <th class="col-4">ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id.to_i %></td>
        <td><%= item.item_name %></td>
        <td><%= item.tax_excluded_price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.sales_status %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>