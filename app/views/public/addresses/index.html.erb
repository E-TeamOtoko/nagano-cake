<div class="address-new">
  <h5>配送先登録/一覧</h5>
  <%= form_with model: @address, url: addresses_path(@address), method: :POST do |f| %>
    <div class="form-group">
      <b><%= f.label :郵便番号 %></b>
    </div>
    <div class="form-group">
      <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control address_postal_code" %>
    </div>
    <div class="form-group">
      <%= f.text_field :address, placeholder: "住所", class: "form-control address_address" %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "宛名", class: "form-control address_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <% if @address.customer == current_customer %>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %></td>
        <% end %>
    <% end %>
  </tbody>
</table>