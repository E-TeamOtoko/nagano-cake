<div class="genre-edit">
  <div class="row">
    <div class="offset-1 text-center">
      <h4 class="table-active text-center px-3">
        ジャンル編集
      </h4>
    </div>
  </div>

  <%= form_with model: [:admin, @genre], method: :patch do |f| %>
    <table class="my-5">
      <tr>
        <td class="genre-form-group">
          <b><%= f.label :ジャンル名 %></b>
        </td>
        <td class="genre-form-group">
          <%= f.text_field :name, class: "textlines" %>
        </td>
        <td class="genre-form-group">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>