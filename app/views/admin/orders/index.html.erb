<div class="container my-5">
  <div class="row">
    <div class="text-center">
      <h4 class="table-active text-center px-3">
        注文履歴一覧
      </h4>
    </div>
  </div>
  <div class="row mt-5">
    <table class="table table-hover">
      <thead>
        <tr class="table-active text">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr class="light-text">
          <td>
            <%= link_to admin_order_path(order), class: "text-dark" do %>
              <%= order.created_at.strftime('%Y年/%m月/%d日 %H:%M:%S') %>
            <% end %>
          </td>
          <td>
            <%= order.customer.last_name %>
            <%= order.customer.first_name %>
          </td>
          <td><%= order.order_lists.sum(:quantity) %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>